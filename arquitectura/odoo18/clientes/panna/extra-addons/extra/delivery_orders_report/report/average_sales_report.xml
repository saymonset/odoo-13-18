<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="average_sales_report">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
           <t t-set="docsTable" t-value="o.sql_result and json.loads(o.sql_result) or []"/>
            <t t-set="tipo_transferencia" t-value="docsTable['tipo_transferencia']"/>
            <t t-set="almacenOriginName" t-value="docsTable['almacenOriginName']"/>
            <t t-set="scheduled_date" t-value="docsTable['scheduled_date']"/>
            <t t-set="categorias" t-value="docsTable['categorias'] or []"/>
            <t t-call="web.external_layout">
                <div class="page" style="font-size: 10pt !important;">

                    <div class="row">
                        <div class="col-6 text-start">
                            <div class="mb-1"><strong></strong> <h1><span t-esc="tipo_transferencia"/></h1></div>
                            <div class="mb-1"><h3><span t-esc="almacenOriginName"/></h3></div>
                            <div class="mb-1"><span><h3></h3></span></div>
                        </div>
                        <div class="col-6 text-end">
                            <div class="mb-1"><span style="display: block;"><img src="/delivery_orders_report/static/logo.png"
                              height="50" width="50"/></span></div>
                            <div class="mb-1"><div style="height: 10px;"></div></div> <!-- Espacio en blanco -->
                            <div class="mb-1"><strong><h3 style="margin: 0;"><span t-esc="scheduled_date"/></h3></strong></div>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-12">
                            <hr class="my-2"/>
                        </div>
                    </div>
                    <div class="clearfix">
                        <div class="page mb-4">
                        
                        <t t-if="docsTable">  <!-- Verifica si docsTable tiene datos -->
                        
                                <table class="o_has_total_table table o_main_table table-borderless">
                                    <thead class="bg-light text-white">
                                        <tr>
                                            <th name="th_name_article" class="text-center"><span>Nombre Articulo</span></th>
                                            
                                            <th name="th_unit" class="text-center"><span>Unidades</span></th>
                                            <th name="th_check" class="text-center "></th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                
                                      <t t-foreach="categorias" t-as="categoria_obj">
                                            <tr>
                                                <td class="text-start" colspan="3" 
                                                    style="background-color: #f0f8ff;
                                                    color: #333; padding: 10px; border-radius: 5px;">
                                                    <span t-esc="categoria_obj['categoria']"/>  
                                                </td>

                                            </tr>
                                            <t t-foreach="categoria_obj['items']" t-as="producto">  <!-- Iterar sobre los productos de la categoría -->
                                                <tr> 
                                                    <td class="text-end">
                                                        <span t-esc="producto['nombre_producto']"/>
                                                    </td>
                                                    <td class="text-end">
                                                       <!-- <div class="progress">
                                                            <div class="progress-bar" role="progressbar"
                                                             style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                                                        </div> -->
                                                        <span t-esc="producto['cantidad']"/>
                                                    </td>
                                                    <td class="text-end">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" id="checkbox_{{ producto['idProductoid'] }}" />
                                                            <label class="form-check-label" for="checkbox_{{ producto['idProducto'] }}"/>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>         
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">  <!-- Si docsTable está vacío -->
                                <div class="alert alert-warning">
                                    No hay datos disponibles para mostrar en el reporte.
                                </div>
                            </t>
                        </div>
                    </div>
                
                </div>
            </t>
        </t>
      </t>   
    </template>

    <record id="action_average_sales_report" model="ir.actions.report">
        <field name="name">Average Sales Report</field>
        <field name="model">wizard.average.sales.and.profit.margin</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">delivery_orders_report.average_sales_report</field>
        <field name="report_file">delivery_orders_report.average_sales_report</field>
        <field name="print_report_name">'Informe por promedio de ventas'</field>
        <field name="binding_type">report</field>
    </record>
</odoo>
